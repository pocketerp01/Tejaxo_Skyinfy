    function calc() {
        //debugger
        var Rbt_FP = $("[id*=Rbt_FP]");
        var Rbt_FA = $("[id*=Rbt_FA]");
        var Rbt_FL = $("[id*=Rbt_FL]");


        var Rbt_SP = $("[id*=Rbt_SP]");
        var Rbt_SA = $("[id*=Rbt_SA]");
        var Rbt_SL = $("[id*=Rbt_SL]");

        var totpresents = 0, totabs = 0, totlvs = 0, fpre = 0, spre = 0, fab = 0, sab = 0, flv = 0, slv = 0;
        var len = Rbt_FP.length;
        for (var k = 0; k < len; k++) {
            if (Rbt_FP[k].checked && Rbt_SP[k].checked) {

                fpre = fpre + 1;
                spre = spre + 1;
                //present 1
            }

            if (!Rbt_FP[k].checked && Rbt_SP[k].checked) {

                fpre = fpre + 0;
                spre = spre + 1;
                //present 2
            }

            if (Rbt_FP[k].checked && !Rbt_SP[k].checked) {

                fpre = fpre + 1;
                spre = spre + 0;
                //present 3
            }

            if (Rbt_FA[k].checked && Rbt_SA[k].checked) {

                fab = fab + 1;
                sab = sab + 1;
                //Absent 1
            }

            if (!Rbt_FA[k].checked && Rbt_SA[k].checked) {

                fab = fab + 0;
                sab = sab + 1;
                //Absent 2
            }

            if (Rbt_FA[k].checked && !Rbt_SA[k].checked) {

                fab = fab + 1;
                sab = sab + 0;
                //Absent 3
            }

            if (Rbt_FL[k].checked && Rbt_SL[k].checked) {

                flv = flv + 1;
                slv = slv + 1;
                //Leave 1
            }

            if (!Rbt_FL[k].checked && Rbt_SL[k].checked) {

                flv = flv + 0;
                slv = slv + 1;
                //Leave 2
            }

            if (Rbt_FL[k].checked && !Rbt_SL[k].checked) {

                flv = flv + 1;
                slv = slv + 0;
                //Leave 3
            }
        }

        totpresents = parseFloat((fpre + spre)) / 2;
        totabs = parseFloat((fab + sab)) / 2;
        totlvs = parseFloat((flv + slv)) / 2;

        $("[id*=lbl_present]").val("Total Present :" + totpresents);
        $("[id*=lbl_absent]").val("Total Absent :" + totabs);
