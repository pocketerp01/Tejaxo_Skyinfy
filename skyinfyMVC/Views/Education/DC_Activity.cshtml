@using System.Data;
@model IList<skyinfyMVC.Models.Tmodelmain>
@{
    Layout = "~/Views/Shared/_MasterPage.cshtml";
    sgenFun sgen = new sgenFun(Model[0].Col15);
    string userCode = sgen.GetCookie(Model[0].Col15, "userCode");

    var viewName = sgen.GetSession(Model[0].Col15, "viewName").ToString();
    var controllerName = sgen.GetSession(Model[0].Col15, "controllerName").ToString();
  
}

@using (Html.BeginForm(viewName, controllerName, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <div class='input-group'>
                    <div class="title_left">
                        <h3>@ViewBag.Title</h3>
                    </div>

                    <span class="input-group-addon formclass"></span>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <div class='input-group'>
                            <input type="submit" class="btn btn-primary form-control sa-button" @ViewBag.vnew style="border-radius: 10px!important;" id="btnnew" name="command" value="New" />
                            <span class="input-group-addon formclass"></span>
                        </div>
                    </div>
                </div>
                <div class='col-sm-2'>
                    <div class="form-group">
                        <div class='input-group'>
                            <input type="button" class="btn btn-primary form-control" @ViewBag.vedit style="border-radius: 10px!important;" id="btnedit" onclick="editfun();" name="command" value="Edit" />

                            <span class="input-group-addon formclass"></span>
                        </div>
                    </div>
                </div>
                <div class='col-sm-2'>
                    <div class="form-group">
                        <div class='input-group'>
                            <input type="submit" class="btn btn-primary form-control" @ViewBag.vsave style="border-radius: 10px!important;" id="btnsave" name="command" value="Save" />

                            <span class="input-group-addon formclass"></span>
                        </div>
                    </div>
                </div>
                <div class='col-sm-2'>
                    <div class="form-group">
                        <div class='input-group'>
                            <input type="button" class="btn btn-primary form-control" style="border-radius: 10px!important;" onclick="viewfun();" id="btndetail" accesskey="V" name="command" value="View" />

                            <span class="input-group-addon formclass"></span>
                        </div>
                    </div>
                </div>
                <div class='col-sm-2'>
                    <div class="form-group">
                        <div class='input-group'>
                            <button type="submit" class="sa-btncancel form-control" style="border-radius: 10px!important;" id="btncancel" name="command" value="Cancel" accesskey="C">C<u>a</u>ncel</button>
                            <span class="input-group-addon formclass"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    for (int i = 0; i < Model.Count; i++)
    {
        <div class=" clearfix"></div>
        @Html.HiddenFor(model => model[0].Col1, new { @id = "lbl_entby", @class = "form-control  col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "lbl_entby", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col2, new { @id = "lbl_entdt", @class = "form-control  col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "lbl_entdt", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col3, new { @id = "lbl_vch_num", @class = "form-control  col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "vch_num", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col4, new { @id = "lbl_client_id", @class = "form-control  col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "clientid", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col5, new { @id = "lbl_client_unit_id", @class = "form-control  col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "client_unit_id", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col6, new { @id = "lbl_url", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "url", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col7, new { @id = "lbl_recid", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "recid", @onkeydown = "return checkLength(this, 28,event);" })
        @Html.HiddenFor(model => model[i].Col8, new { @id = "lbl_master_id", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "master_id", @onkeydown = "return checkLength(this, 28,event);" })


        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <div class="row">
                            <div id="demo-form2" class="form-horizontal">

                                <div class="form-group" runat="server">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Activity</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model[i].Col16, new { @id = "txt_Room", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "Activity" })
                                    </div>

                                </div>

                                <div class="form-group" runat="server">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Month</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.DropDownListFor(model => model[0].SelectedItems1, Model[0].TList1, new { multiple = "multiple", @id = "ddl_dept", @class = "sa-selectfast form-control col-md-12 col-sm-12 col-xs-12", data_placeholder = "Choose Month" })



                                    </div>

                                </div>
                                <div class="form-group" runat="server">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Activity Time</label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        @Html.TextBoxFor(model => model[i].Col16, new { @id = "txt_Room", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox sa-ac-time", data_placeholder = "Activity Time" })


                                    </div>

                                </div>






                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <input type="submit" id="callback1" value="Callback" name="Command" title="callback" style="visibility:hidden" class="btn btn-primary" />

}

