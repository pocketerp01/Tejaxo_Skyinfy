                    showmsgJS(1, "Percentage cannot greater than 100 ", 2);
                    txt.value = "";
                    return false;
                }
                txt.value = txt.value + "%";
            }
            else {
                if (txt.value.endsWith('%')) {
                    var a = txt.value.split('%')[0];
                    if (a > 100) {
                        showmsgJS(1, "Percentage cannot greater than 100 ", 2);
                        txt.value = "";
                        return false;
                    }
                    txt.value = txt.value
                }
