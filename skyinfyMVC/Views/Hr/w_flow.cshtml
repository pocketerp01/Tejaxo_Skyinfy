    });
    function editfun() { var data = show_Foo('Select Entry For Edit', 'EDIT', '1', '@viewName', '@controllerName','@Model[0].Col14'); }
    @*function viewfun() { var data = show_Foo('View Detail', 'VIEW', '0', '@viewName', '@controllerName'); }*@
    function sethfval(val) { $("#hfrow").val(val); }
    function selectindex_change() {
        debugger;

        var ids = new Array();
        var vals = $("select[id*=ddl_role]").length;
        if (vals == "" || vals == undefined) {
            vals = 1;
        }
        for (var i = 0; i < vals; i++) {
            try {
                if (ids.includes($("#ddl_role" + i + "")[0].value)) alert('Duplicate Role Exist');
                else ids.push($("#ddl_role" + i + "")[0].value);
                if ($("#ddl_role" + i + "")[0].value == "999999") { $("#div_othr_" + i + "").show(); }
                else { $("#div_othr_" + i + "").hide(); }
            }
            catch{ }
        }

    }

</script>