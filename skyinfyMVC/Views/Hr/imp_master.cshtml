                                </div>
                            </div>
                        </div>
                        <div class='col-sm-4'>
                            <label for="first-name">Import Type Name<span class="ClientProfileLabelColor">*</span></label>
                            <div class="form-group">
                                <div class='input-group'>
                                    @Html.TextBoxFor(model => model[0].Col17, new { @id = "txt_imptype", @class = "form-control col-md-12 col-sm-12 col-xs-12 sa-textbox sa-mandatory", placeholder = "Import Type Name" })
