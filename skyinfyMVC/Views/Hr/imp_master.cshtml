                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class='col-sm-8'>
                            <label for="first-name">Import Instruction </label>
                            <div class="form-group">
                                <div class='input-group'>
                                    @Html.TextAreaFor(model => model[0].Col18, new { @id = "txt_impinst", @class = "form-control col-md-12 col-sm-12 col-xs-12 sa-textbox sa-mandatory", @MaxLength = "300", @cols = 80, @Rows = 10 })
