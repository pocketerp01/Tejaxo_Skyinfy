                                        <br />
                                        <b style="color:red">
                                            @Html.DisplayFor(model => model[0].Col21, new { @id = "lbl_msg", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox" })
                                        </b>
                                    </div>
                                </div>

                            </div>
                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
