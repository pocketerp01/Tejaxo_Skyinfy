                                    </label>
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                      
                                        @Html.TextBoxFor(model => model[0].Col20, new { @id = "con_pasword", @type = "password", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox sa-mandatory" })

