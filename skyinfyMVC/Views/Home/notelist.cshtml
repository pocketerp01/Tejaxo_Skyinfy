                                    "render": function (data, type, full, meta, row) {
                                        //"<a class='btn btn-info' href='/grid/Edit/' + full.CustomerID + '>Edit</a>   " +
                                        //   " <a href = '#' class='btn btn-danger' onclick = DeleteData('h'); > Delete</a > ";
                                        var fstr = full[Object.keys(full)[0]];
