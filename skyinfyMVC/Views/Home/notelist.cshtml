                                url: '/Grid/LoadData',
                                method: 'POST',
                                data: data
                            }).done(function (res) {

                                callback(JSON.parse(res));
                            }).error(function (res) {

                                callback(JSON.parse(res));
                            }).error;
                        },
                        createdRow: function (row, data, dataIndex) {
                            if (data["DESCRIPTION"].length > 10) {
                                $('td', row).eq(5).text(data["DESCRIPTION"].slice(0, 10) + "..");
