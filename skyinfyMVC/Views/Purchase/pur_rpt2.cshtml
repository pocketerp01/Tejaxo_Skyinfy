                    @Html.HiddenFor(model => model[0].Col15, new { @id = "hf_m_id" })

                    <div class="panel" style="padding: 10px;">
                        <div class="container-fluid">
                            <div class="row">
                                @if (tmp.Rows.Count > 0)
                                {
                                    for (int i = 0; i < tmp.Rows.Count; i++)
                                    {
                                        if (tmp.Rows[i]["fun_name"].ToString() == "call_filterfrm")
