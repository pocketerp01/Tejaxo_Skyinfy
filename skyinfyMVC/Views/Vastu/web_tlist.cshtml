                                        <div class=" clearfix"></div>
                                        @Html.DisplayFor(model => model[i].Col18, new { @id = "Student_name", @class = " form-control col-md-12 col-sm-12 col-xs-12 sa-textbox", data_placeholder = "Designation", @onkeydown = "return checkLength(this, 28,event);" })
