            @Html.HiddenFor(model => model[0].Col36, new { @id = "hf_tat" })
            if ((Model[i].Col18 != null) && (Model[i].Col18 != "") && (Model[i].Col18 != "0"))
            {
        <div class="row" style="width:150%">
            <div class="col-md-12 col-sm-12 col-xs-12 smt">
                <div class="x_panel" style="padding: 0px 15px !important;margin-bottom:0px !important; @clr">
                    <div class="x_content">

                        <div id="Atten_@i" class="row table-responsive">
                            <div class='col-sm-3'>
                                <div class="form-group">
                                    <div class='input-group'>


                                        <b style="padding-top:12px;margin-right:15px;margin-left:2px"></b>
                                        @Html.RadioButtonFor(model => model[i].Col27, "P", new { @id = "Rbt_A", @class = " sa-input radio", @style = "vertical-align:initial;min-height:0px;margin:0px", data_toggle = "tooltip", data_placement = "top", @title = "Pending" })
                                        <b style="padding-top:12px;margin-right:15px"></b>
                                        @Html.RadioButtonFor(model => model[i].Col27, "A", new { @id = "Rbt_A", @class = " sa-input radio", @style = "vertical-align:initial;min-height:0px;margin:0px", data_toggle = "tooltip", data_placement = "top", @title = "Approved" })
                                        <b style="padding-top:12px; margin-right:15px"></b>
                                        @Html.RadioButtonFor(model => model[i].Col27, "R", new { @id = "Rbt_P", @class = " sa-input radio", @style = "vertical-align:initial;min-height:0px;margin:0px ", data_toggle = "tooltip", data_placement = "top", @title = "Reject" })

