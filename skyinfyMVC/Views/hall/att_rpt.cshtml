                            <div class="x_content">

                                <div id="Atten_@i" class="row table-responsive">
                                    <div class='col-sm-3'>
                                        <div class="form-group">
                                            <div class='input-group'>
                                                <b style="padding-top:12px;margin-right:30px;margin-left:2px"></b>
